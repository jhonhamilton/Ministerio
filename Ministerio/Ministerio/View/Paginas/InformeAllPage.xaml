                                            <Grid>
                                                <Label Grid.Column="0" Text="Tiempo" TextColor="Black"/>
                                                <Label Grid.Column="1" HorizontalTextAlignment="End" TextColor="Black" Text="{Binding Tiempo}"/>
                                            </Grid>
                                        </Frame>
                                        <Frame Grid.Row="2" Padding="5" HeightRequest="25">
